<!-- Loop over each object in the projects array -->
{{#each posts as |post| }}
<div class="row mb-4 project">
    <div class="col-md-5">
        <h2>
            {{post.title}}
        </h2>
        
        <p>Created by {{user.name}} on {{format_date post.date_created}}</p>
    </div>
    <div class="col-md-7">
        <p>
            {{post.description}}
        </p>
    </div>
</div>
{{/each}}