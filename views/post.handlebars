{{#each posts as |post| }}
<div class="justify-content-center post-content">
    <div class="post-title">
        <h2>
            <a href="/dashboard/editPost/{{post.id}}">
                {{post.title}}
            </a>
        </h2>
        <p>Created by {{user.name}} on {{format_date post.date_created}}</p>

    </div>
    <div class="post-description">
        <p>
            {{post.description}}
        </p>
    </div>
</div>
{{/each}}